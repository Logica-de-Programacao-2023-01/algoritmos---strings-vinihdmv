package main

import (
	"fmt"
	"strings"
)

func main() {
	var input string
	fmt.Print("Digite uma string: ")
	fmt.Scanln(&input)

	input = strings.TrimSpace(input)


	words := strings.Split(input, " ")


	wordCount := len(words)

	fmt.Printf("A string digitada cont√©m %d palavras.\n", wordCount)
}
